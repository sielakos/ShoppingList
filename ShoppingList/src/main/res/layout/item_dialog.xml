<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.sledzdev.shoppinglist.ItemDialogActivity$PlaceholderFragment">

    <EditText
        android:id="@+id/item_name"
        android:inputType="text"
        android:layout_width="@dimen/dialog_input_width"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/item_price"
        android:layout_below="@id/item_name"
        android:inputType="numberDecimal"
        android:layout_width="@dimen/dialog_input_width"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/ok_btn"
        android:text="@string/accept_dialog_btn"
        android:layout_below="@id/item_price"
        android:layout_width="@dimen/dialog_btn_width"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/cancel_btn"
        android:text="@string/cancel_dialog_btn"
        android:layout_below="@id/item_price"
        android:layout_toRightOf="@id/ok_btn"
        android:layout_width="@dimen/dialog_btn_width"
        android:layout_height="wrap_content" />

</RelativeLayout>
